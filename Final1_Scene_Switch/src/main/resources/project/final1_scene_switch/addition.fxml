<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="450.0" prefWidth="700.0" style="-fx-background-color: linear-gradient(to bottom right, #0f0f17, #1a1a2f);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.final1_scene_switch.AdditionController">

    <children>

        <!-- Main Glass Card -->
        <VBox alignment="CENTER" layoutX="160.0" layoutY="70.0" prefHeight="310.0" prefWidth="380.0" spacing="18" style="-fx-background-color: rgba(255,255,255,0.08);                      -fx-background-radius: 20;                      -fx-padding: 20;">
            <effect>
                <DropShadow color="#00eaff80" radius="20" spread="0.2" />
            </effect>

            <!-- Title -->
            <Label style="-fx-text-fill: #00eaff;                           -fx-font-size: 28px;                           -fx-font-weight: bold;                           -fx-effect: dropshadow(gaussian, #00eaff, 8, 0.3, 0, 0);" text="ADDITION" />

            <!-- Num1 -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-text-fill: #b0b0b0; -fx-font-size: 16px;" text="Num 1" />
                <TextField fx:id="num1" prefWidth="220" style="-fx-background-radius: 10;                                   -fx-background-color: rgba(255,255,255,0.15);                                   -fx-text-fill: white;                                   -fx-prompt-text-fill: #cccccc;" />
            </HBox>

            <!-- Num2 -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-text-fill: #b0b0b0; -fx-font-size: 16px;" text="Num 2" />
                <TextField fx:id="num2" prefWidth="220" style="-fx-background-radius: 10;                                   -fx-background-color: rgba(255,255,255,0.15);                                   -fx-text-fill: white;                                   -fx-prompt-text-fill: #cccccc;" />
            </HBox>

            <!-- Result -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-text-fill: #b0b0b0; -fx-font-size: 16px;" text="Result" />
                <TextField fx:id="result" prefWidth="220" style="-fx-background-color: rgba(255,255,255,0.15);                                   -fx-background-radius: 10;                                   -fx-text-fill: #00ffaa;                                   -fx-prompt-text-fill: #cccccc;" />
            </HBox>

            <!-- Buttons Row -->
            <HBox alignment="CENTER" spacing="20">

                <Button onAction="#handleResult" style="-fx-background-color: linear-gradient(to right, #00eaff, #0077ff);                                -fx-background-radius: 15;                                -fx-text-fill: black;                                -fx-font-weight: bold;                                -fx-padding: 10 22;                                -fx-cursor: hand;" text="Calculate">
                    <effect>
                        <DropShadow color="#00aaff" radius="12" />
                    </effect>
                </Button>

                <Button onAction="#handleBack" style="-fx-background-color: transparent;                                -fx-border-color: #00eaff;                                -fx-border-width: 1.5;                                -fx-border-radius: 15;                                -fx-text-fill: #00eaff;                                -fx-font-weight: bold;                                -fx-padding: 10 22;                                -fx-cursor: hand;" text="Back" />
            </HBox>

        </VBox>

    </children>

</AnchorPane>
