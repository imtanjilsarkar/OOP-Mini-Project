<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>


<AnchorPane fx:controller="project.final1_scene_switch.DivisionController"
            prefHeight="450.0" prefWidth="700.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: linear-gradient(to bottom right, #0e0e15, #1c1c2d);">

    <children>

        <!-- Main Glass Card -->
        <VBox layoutX="160" layoutY="70" spacing="18"
              prefWidth="380" prefHeight="310"
              alignment="CENTER"
              style="-fx-background-color: rgba(255,255,255,0.07);
                     -fx-background-radius: 20;
                     -fx-padding: 20;">
            <effect>
                <DropShadow radius="20" spread="0.2" color="#ff990080"/>
            </effect>

            <!-- Title -->
            <Label text="DIVISION"
                   style="-fx-text-fill: #ffbb33;
                          -fx-font-size: 28px;
                          -fx-font-weight: bold;
                          -fx-effect: dropshadow(gaussian, #ffbb33, 8, 0.3, 0, 0);"/>

            <!-- Num1 -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Num 1"
                       style="-fx-text-fill: #bbbbbb; -fx-font-size: 16px;"/>
                <TextField fx:id="num1" prefWidth="220"
                           style="-fx-background-radius: 10;
                                  -fx-background-color: rgba(255,255,255,0.15);
                                  -fx-text-fill: white;
                                  -fx-prompt-text-fill: #cccccc;"/>
            </HBox>

            <!-- Num2 -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Num 2"
                       style="-fx-text-fill: #bbbbbb; -fx-font-size: 16px;"/>
                <TextField fx:id="num2" prefWidth="220"
                           style="-fx-background-radius: 10;
                                  -fx-background-color: rgba(255,255,255,0.15);
                                  -fx-text-fill: white;
                                  -fx-prompt-text-fill: #cccccc;"/>
            </HBox>

            <!-- Result -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Result"
                       style="-fx-text-fill: #bbbbbb; -fx-font-size: 16px;"/>
                <TextField fx:id="result" prefWidth="220"
                           style="-fx-background-color: rgba(255,255,255,0.15);
                                  -fx-background-radius: 10;
                                  -fx-text-fill: #ffbb33;
                                  -fx-prompt-text-fill: #cccccc;" />
            </HBox>

            <!-- Buttons Row -->
            <HBox alignment="CENTER" spacing="20">

                <Button text="Calculate"
                        onAction="#handleDivResult"
                        style="-fx-background-color: linear-gradient(to right, #ffbb33, #ff8800);
                               -fx-background-radius: 15;
                               -fx-text-fill: black;
                               -fx-font-weight: bold;
                               -fx-padding: 10 22;
                               -fx-cursor: hand;">
                    <effect>
                        <DropShadow radius="12" color="#ff9900"/>
                    </effect>
                </Button>

                <Button text="Back"
                        onAction="#handleBack"
                        style="-fx-background-color: transparent;
                               -fx-border-color: #ffbb33;
                               -fx-border-width: 1.5;
                               -fx-border-radius: 15;
                               -fx-text-fill: #ffbb33;
                               -fx-font-weight: bold;
                               -fx-padding: 10 22;
                               -fx-cursor: hand;"/>
            </HBox>

        </VBox>

    </children>

</AnchorPane>
