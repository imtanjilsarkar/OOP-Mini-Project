<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>


<AnchorPane fx:controller="project.final1_scene_switch.CalculatorController"
            prefHeight="500.0" prefWidth="750.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: linear-gradient(to bottom right, #0d0d12, #1c1c2f);">

    <children>

        <!-- Glass Card -->
        <VBox layoutX="190" layoutY="110" spacing="25"
              prefWidth="370" prefHeight="300"
              alignment="CENTER"
              style="-fx-background-color: rgba(255,255,255,0.08);
                     -fx-background-radius: 22;
                     -fx-padding: 25;">
            <effect>
                <DropShadow radius="20" spread="0.2" color="#00eaff80"/>
            </effect>

            <!-- Main Title -->
            <Label text="CALCULATOR"
                   style="-fx-text-fill: #00eaff;
                          -fx-font-size: 32px;
                          -fx-font-weight: bold;
                          -fx-effect: dropshadow(gaussian, #00eaff, 10, 0.4, 0, 0);"/>

            <!-- Addition Button -->
            <Button text="Addition"
                    onAction="#handleAdd"
                    prefWidth="250"
                    style="-fx-background-color: linear-gradient(to right, #00eaff, #0088ff);
                           -fx-background-radius: 18;
                           -fx-text-fill: black;
                           -fx-font-size: 16px;
                           -fx-font-weight: bold;
                           -fx-padding: 12 20;">
                <effect>
                    <DropShadow radius="12" color="#0099ff"/>
                </effect>
            </Button>

            <!-- Subtraction Button -->
            <Button text="Subtraction"
                    onAction="#handleSub"
                    prefWidth="250"
                    style="-fx-background-color: linear-gradient(to right, #ff3366, #ff5588);
                           -fx-background-radius: 18;
                           -fx-text-fill: black;
                           -fx-font-size: 16px;
                           -fx-font-weight: bold;
                           -fx-padding: 12 20;">
                <effect>
                    <DropShadow radius="12" color="#ff3366"/>
                </effect>
            </Button>

            <!-- Multiplication Button -->
            <Button text="Multiplication"
                    onAction="#handleMul"
                    prefWidth="250"
                    style="-fx-background-color: linear-gradient(to right, #00ffaa, #00cc77);
                           -fx-background-radius: 18;
                           -fx-text-fill: black;
                           -fx-font-size: 16px;
                           -fx-font-weight: bold;
                           -fx-padding: 12 20;">
                <effect>
                    <DropShadow radius="12" color="#00ff99"/>
                </effect>
            </Button>

            <!-- Division Button -->
            <Button text="Division"
                    onAction="#handleDiv"
                    prefWidth="250"
                    style="-fx-background-color: linear-gradient(to right, #ffaa00, #ff8800);
                           -fx-background-radius: 18;
                           -fx-text-fill: black;
                           -fx-font-size: 16px;
                           -fx-font-weight: bold;
                           -fx-padding: 12 20;">
                <effect>
                    <DropShadow radius="12" color="#ff9900"/>
                </effect>
            </Button>

        </VBox>

    </children>
</AnchorPane>
