<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="750.0" style="-fx-background-color: linear-gradient(to bottom right, #0d0d12, #1c1c2f);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.final1_scene_switch.CalculatorController">

    <children>

        <!-- Glass Card -->
        <VBox alignment="CENTER" layoutX="181.0" layoutY="55.0" prefHeight="300" prefWidth="370" spacing="25" style="-fx-background-color: rgba(255,255,255,0.08);                      -fx-background-radius: 22;                      -fx-padding: 25;">
            <effect>
                <DropShadow color="#00eaff80" radius="20" spread="0.2" />
            </effect>

            <!-- Main Title -->
            <Label style="-fx-text-fill: #00eaff;                           -fx-font-size: 32px;                           -fx-font-weight: bold;                           -fx-effect: dropshadow(gaussian, #00eaff, 10, 0.4, 0, 0);" text="CALCULATOR" />

            <!-- Addition Button -->
            <Button onAction="#handleAdd" prefWidth="250" style="-fx-background-color: linear-gradient(to right, #00eaff, #0088ff);                            -fx-background-radius: 18;                            -fx-text-fill: black;                            -fx-font-size: 16px;                            -fx-font-weight: bold;                            -fx-padding: 12 20;" text="Addition">
                <effect>
                    <DropShadow color="#0099ff" radius="12" />
                </effect>
            </Button>

            <!-- Subtraction Button -->
            <Button onAction="#handleSub" prefWidth="250" style="-fx-background-color: linear-gradient(to right, #ff3366, #ff5588);                            -fx-background-radius: 18;                            -fx-text-fill: black;                            -fx-font-size: 16px;                            -fx-font-weight: bold;                            -fx-padding: 12 20;" text="Subtraction">
                <effect>
                    <DropShadow color="#ff3366" radius="12" />
                </effect>
            </Button>

            <!-- Multiplication Button -->
            <Button onAction="#handleMul" prefWidth="250" style="-fx-background-color: linear-gradient(to right, #00ffaa, #00cc77);                            -fx-background-radius: 18;                            -fx-text-fill: black;                            -fx-font-size: 16px;                            -fx-font-weight: bold;                            -fx-padding: 12 20;" text="Multiplication">
                <effect>
                    <DropShadow color="#00ff99" radius="12" />
                </effect>
            </Button>

            <!-- Division Button -->
            <Button onAction="#handleDiv" prefWidth="250" style="-fx-background-color: linear-gradient(to right, #ffaa00, #ff8800);                            -fx-background-radius: 18;                            -fx-text-fill: black;                            -fx-font-size: 16px;                            -fx-font-weight: bold;                            -fx-padding: 12 20;" text="Division">
                <effect>
                    <DropShadow color="#ff9900" radius="12" />
                </effect>
            </Button>

        </VBox>

    </children>
</AnchorPane>
